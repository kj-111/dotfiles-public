{
    "title": "Space Fn Option (Space -> Right Option)",
    "rules": [
        {
            "description": "Spacebar: tap = space, hold = right_option (lazy, 0ms)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to_if_alone": [
                        {
                            "key_code": "spacebar"
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "right_option",
                            "lazy": true
                        }
                    ],
                    "parameters": {
                        "basic.to_if_held_down_threshold_milliseconds": 0,
                        "basic.to_if_alone_timeout_milliseconds": 350
                    }
                }
            ]
        }
    ]
}